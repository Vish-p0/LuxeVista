<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:strokeWidth="0dp"
    android:backgroundTint="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <!-- Type Icon and Badge -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/iconType"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_rooms"
                    app:tint="#007AFF"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/textType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Room"
                    android:textSize="12sp"
                    android:textColor="#007AFF"
                    android:fontFamily="@font/poppins_medium"
                    android:background="@drawable/bg_nav_item_selected"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="4dp"
                    tools:text="Room" />

            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <!-- Status Badge -->
            <TextView
                android:id="@+id/textStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Confirmed"
                android:textSize="12sp"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/poppins_medium"
                android:background="@drawable/round_button_ripple"
                android:backgroundTint="#4CAF50"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                tools:text="Confirmed" />

        </LinearLayout>

        <!-- Booking ID -->
        <TextView
            android:id="@+id/textBookingId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Booking #booking010"
            android:textSize="14sp"
            android:textColor="#666666"
            android:fontFamily="@font/poppins_regular"
            android:layout_marginBottom="8dp"
            tools:text="Booking #booking010" />

        <!-- Item Image and Name -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <ImageView
                android:id="@+id/imageItem"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginEnd="12dp"
                android:src="@drawable/ic_image_placeholder"
                android:scaleType="centerCrop"
                android:background="@drawable/bg_nav_item_selected"
                android:backgroundTint="#F5F7FA" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_gravity="center_vertical">

                <TextView
                    android:id="@+id/textItemName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Deluxe Ocean View Suite"
                    android:textSize="16sp"
                    android:textColor="#1A1A1A"
                    android:fontFamily="@font/poppins_semi_bold"
                    android:maxLines="2"
                    android:ellipsize="end"
                    tools:text="Deluxe Ocean View Suite" />

                <TextView
                    android:id="@+id/textItemDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Luxury accommodation with ocean view"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_marginTop="4dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    tools:text="Luxury accommodation with ocean view" />

            </LinearLayout>

        </LinearLayout>

        <!-- Date Information -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_calendar"
                app:tint="#666666"
                android:layout_marginEnd="8dp"
                android:layout_gravity="center_vertical" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textStartDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Check-in: Sep 1, 2025 at 12:00 PM"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:fontFamily="@font/poppins_regular"
                    tools:text="Check-in: Sep 1, 2025 at 12:00 PM" />

                <TextView
                    android:id="@+id/textEndDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Check-out: Sep 3, 2025 at 11:00 AM"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_marginTop="2dp"
                    tools:text="Check-out: Sep 3, 2025 at 11:00 AM" />

            </LinearLayout>

        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginVertical="12dp" />

        <!-- Bottom Row: Price and Action -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Price -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Price"
                    android:textSize="12sp"
                    android:textColor="#999999"
                    android:fontFamily="@font/poppins_regular" />

                <TextView
                    android:id="@+id/textPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$90.00"
                    android:textSize="20sp"
                    android:textColor="#1A1A1A"
                    android:fontFamily="@font/poppins_bold"
                    android:layout_marginTop="2dp"
                    tools:text="$90.00" />

            </LinearLayout>

            <!-- Action Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnViewDetails"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="View Details"
                android:textSize="14sp"
                android:fontFamily="@font/poppins_medium"
                android:textColor="#007AFF"
                app:strokeColor="#007AFF"
                app:strokeWidth="1dp"
                app:cornerRadius="20dp"
                android:paddingHorizontal="20dp"
                android:minWidth="0dp"
                android:insetTop="0dp"
                android:insetBottom="0dp" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>