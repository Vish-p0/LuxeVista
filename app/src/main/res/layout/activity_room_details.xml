<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA">

    <!-- App Bar -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:elevation="0dp"
        app:elevation="0dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#FFFFFF"
            app:title="Room Details"
            app:titleTextAppearance="@style/TextAppearance.Material3.HeadlineSmall"
            app:titleTextColor="#1A1A1A"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:navigationIconTint="#666666" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Main Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="100dp">

            <!-- Image Carousel -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_margin="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:strokeWidth="0dp">

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/viewPagerImages"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <!-- Image Indicator -->
                <LinearLayout
                    android:id="@+id/indicatorContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginBottom="16dp"
                    android:orientation="horizontal"
                    android:padding="8dp"
                    android:background="@drawable/bg_indicator_background" />

            </com.google.android.material.card.MaterialCardView>

            <!-- Room Info Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:strokeWidth="0dp"
                android:backgroundTint="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Room Name and Type -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvRoomName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Standard Twin Room"
                                android:textColor="#1A1A1A"
                                android:textSize="24sp"
                                android:fontFamily="@font/poppins_bold"
                                tools:text="Standard Twin Room" />

                            <TextView
                                android:id="@+id/tvRoomType"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Standard"
                                android:textColor="#666666"
                                android:textSize="16sp"
                                android:fontFamily="@font/poppins_medium"
                                android:layout_marginTop="4dp"
                                tools:text="Standard" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="end">

                            <TextView
                                android:id="@+id/tvRoomPrice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="$100"
                                android:textColor="#007AFF"
                                android:textSize="28sp"
                                android:fontFamily="@font/poppins_bold"
                                tools:text="$100" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="per night"
                                android:textColor="#666666"
                                android:textSize="14sp"
                                android:fontFamily="@font/poppins_regular" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Max Guests -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="@drawable/bg_guests_tag"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="6dp"
                        android:layout_marginBottom="16dp">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_person"
                            android:layout_marginEnd="6dp"
                            app:tint="#007AFF" />

                        <TextView
                            android:id="@+id/tvMaxGuests"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2 guests"
                            android:textColor="#007AFF"
                            android:textSize="14sp"
                            android:fontFamily="@font/poppins_medium"
                            tools:text="2 guests" />

                    </LinearLayout>

                    <!-- Description -->
                    <TextView
                        android:id="@+id/tvRoomDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Comfortable twin-bed room for budget-conscious travelers."
                        android:textColor="#666666"
                        android:textSize="16sp"
                        android:fontFamily="@font/poppins_regular"
                        android:lineSpacingExtra="4dp"
                        tools:text="Comfortable twin-bed room for budget-conscious travelers with modern amenities and beautiful city views." />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Amenities Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:strokeWidth="0dp"
                android:backgroundTint="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Amenities"
                        android:textColor="#1A1A1A"
                        android:textSize="18sp"
                        android:fontFamily="@font/poppins_bold"
                        android:layout_marginBottom="16dp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerAmenities"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Booking Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:strokeWidth="0dp"
                android:backgroundTint="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Book This Room"
                        android:textColor="#1A1A1A"
                        android:textSize="18sp"
                        android:fontFamily="@font/poppins_bold"
                        android:layout_marginBottom="16dp" />

                    <!-- Date Selection -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginEnd="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Check-in"
                                android:textColor="#666666"
                                android:textSize="12sp"
                                android:fontFamily="@font/poppins_medium"
                                android:layout_marginBottom="4dp" />

                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/cardCheckIn"
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                app:cardCornerRadius="8dp"
                                app:cardElevation="0dp"
                                app:strokeWidth="1dp"
                                app:strokeColor="#E0E0E0"
                                android:backgroundTint="#F8F9FA"
                                android:foreground="?attr/selectableItemBackground">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal"
                                    android:gravity="center_vertical"
                                    android:paddingHorizontal="12dp">

                                    <ImageView
                                        android:layout_width="16dp"
                                        android:layout_height="16dp"
                                        android:src="@drawable/ic_calendar"
                                        android:layout_marginEnd="8dp"
                                        app:tint="#666666" />

                                    <TextView
                                        android:id="@+id/tvCheckInDate"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="Select date"
                                        android:textColor="#666666"
                                        android:textSize="14sp"
                                        android:fontFamily="@font/poppins_regular" />

                                </LinearLayout>

                            </com.google.android.material.card.MaterialCardView>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Check-out"
                                android:textColor="#666666"
                                android:textSize="12sp"
                                android:fontFamily="@font/poppins_medium"
                                android:layout_marginBottom="4dp" />

                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/cardCheckOut"
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                app:cardCornerRadius="8dp"
                                app:cardElevation="0dp"
                                app:strokeWidth="1dp"
                                app:strokeColor="#E0E0E0"
                                android:backgroundTint="#F8F9FA"
                                android:foreground="?attr/selectableItemBackground">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal"
                                    android:gravity="center_vertical"
                                    android:paddingHorizontal="12dp">

                                    <ImageView
                                        android:layout_width="16dp"
                                        android:layout_height="16dp"
                                        android:src="@drawable/ic_calendar"
                                        android:layout_marginEnd="8dp"
                                        app:tint="#666666" />

                                    <TextView
                                        android:id="@+id/tvCheckOutDate"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="Select date"
                                        android:textColor="#666666"
                                        android:textSize="14sp"
                                        android:fontFamily="@font/poppins_regular" />

                                </LinearLayout>

                            </com.google.android.material.card.MaterialCardView>

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Total Price Display -->
                    <LinearLayout
                        android:id="@+id/totalPriceLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="@drawable/bg_total_price"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="12dp"
                        android:layout_marginBottom="16dp"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Total Price:"
                            android:textColor="#1A1A1A"
                            android:textSize="16sp"
                            android:fontFamily="@font/poppins_medium" />

                        <TextView
                            android:id="@+id/tvTotalPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$300"
                            android:textColor="#007AFF"
                            android:textSize="20sp"
                            android:fontFamily="@font/poppins_bold"
                            tools:text="$300" />

                        <TextView
                            android:id="@+id/tvTotalNights"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" (3 nights)"
                            android:textColor="#666666"
                            android:textSize="14sp"
                            android:fontFamily="@font/poppins_regular"
                            tools:text=" (3 nights)" />

                    </LinearLayout>

                    <!-- Book Now Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnBookNow"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="Book Now"
                        android:textSize="16sp"
                        android:fontFamily="@font/poppins_bold"
                        android:backgroundTint="#007AFF"
                        android:textColor="#FFFFFF"
                        app:cornerRadius="12dp"
                        app:rippleColor="#E3F2FD" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
