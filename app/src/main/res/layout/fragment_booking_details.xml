<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <!-- Header with Back Button and Title -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:elevation="4dp">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_arrow_back"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Go back"
            android:tint="@color/dark_blue_primary" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Booking Details"
            android:textSize="20sp"
            android:textColor="@color/dark_blue_primary"
            android:fontFamily="@font/poppins_bold"
            android:gravity="center"
            android:layout_marginStart="16dp" />

        <View
            android:layout_width="48dp"
            android:layout_height="48dp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Booking Header Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_section_border"
                android:padding="20dp"
                android:layout_marginBottom="16dp">

                <!-- Booking ID and Status Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:id="@+id/tvBookingId"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Booking #123"
                        android:textSize="24sp"
                        android:textColor="@color/dark_blue_primary"
                        android:fontFamily="@font/poppins_bold" />

                    <TextView
                        android:id="@+id/tvStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Active"
                        android:textSize="14sp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/poppins_bold"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="8dp"
                        android:background="@drawable/bg_availability_badge" />

                </LinearLayout>

                <!-- Total Price and Currency -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total Amount"
                            android:textSize="14sp"
                            android:textColor="@color/text_secondary"
                            android:fontFamily="@font/poppins_medium" />

                        <TextView
                            android:id="@+id/tvTotalPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$720.00"
                            android:textSize="28sp"
                            android:textColor="@color/light_blue_primary"
                            android:fontFamily="@font/poppins_bold" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvCurrency"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="USD"
                        android:textSize="16sp"
                        android:textColor="@color/text_secondary"
                        android:fontFamily="@font/poppins_medium"
                        android:background="@drawable/bg_availability_badge"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="6dp" />

                </LinearLayout>

                <!-- Dates Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_calendar"
                        android:tint="@color/light_blue_primary"
                        android:contentDescription="Calendar icon" />

                    <TextView
                        android:id="@+id/tvDates"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Check-in: Sep 20, 2025 at 2:00 PM\nCheck-out: Sep 23, 2025 at 11:00 AM"
                        android:textSize="16sp"
                        android:textColor="@color/text_primary"
                        android:fontFamily="@font/poppins_regular"
                        android:layout_marginStart="16dp"
                        android:lineSpacingExtra="4dp" />

                </LinearLayout>

            </LinearLayout>

            <!-- Rooms Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_section_border"
                android:padding="20dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Booked Rooms"
                    android:textSize="20sp"
                    android:textColor="@color/dark_blue_primary"
                    android:fontFamily="@font/poppins_bold"
                    android:layout_marginBottom="16dp" />

                <LinearLayout
                    android:id="@+id/roomsContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />

            </LinearLayout>

            <!-- Services Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_section_border"
                android:padding="20dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Booked Services"
                    android:textSize="20sp"
                    android:textColor="@color/dark_blue_primary"
                    android:fontFamily="@font/poppins_bold"
                    android:layout_marginBottom="16dp" />

                <LinearLayout
                    android:id="@+id/servicesContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />

            </LinearLayout>

            <!-- Cancel Booking Button -->
            <Button
                android:id="@+id/btnCancelBooking"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Cancel Booking"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:backgroundTint="@color/status_cancelled"
                android:fontFamily="@font/poppins_bold"
                android:visibility="gone" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
