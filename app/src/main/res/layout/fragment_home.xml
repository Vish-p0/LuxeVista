<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA">

    <!-- Loading Overlay -->
    <FrameLayout
        android:id="@+id/loadingOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F8F9FA"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:gravity="center">

            <com.google.android.material.progressindicator.CircularProgressIndicator
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminate="true"
                app:indicatorColor="#007AFF"
                app:trackColor="#E3F2FD" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loading your personalized experience..."
                android:textColor="#666666"
                android:textSize="14sp"
                android:fontFamily="@font/poppins_regular"
                android:layout_marginTop="16dp" />

        </LinearLayout>

    </FrameLayout>

    <!-- Main Content -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/mainContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="24dp">

            <!-- Welcome Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/gradient_welcome_background"
                android:padding="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Welcome back,"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp"
                            android:fontFamily="@font/poppins_regular"
                            android:alpha="0.9" />

                        <TextView
                            android:id="@+id/tvWelcomeUserName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Guest"
                            android:textColor="#FFFFFF"
                            android:textSize="28sp"
                            android:fontFamily="@font/poppins_bold"
                            android:layout_marginTop="4dp"
                            tools:text="John Smith" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Enjoy your stay at LuxeVista"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:fontFamily="@font/poppins_regular"
                            android:alpha="0.8"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/logo"
                        android:background="@drawable/bg_welcome_icon"
                        android:padding="16dp"
                        android:scaleType="centerInside" />

                </LinearLayout>

            </LinearLayout>

            <!-- Top Carousel Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp"
                android:paddingHorizontal="20dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp">

                    <androidx.viewpager2.widget.ViewPager2
                        android:id="@+id/viewPagerCarousel"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/top_rounded_background" />

                    <!-- Left Arrow -->
                    <ImageView
                        android:id="@+id/btnCarouselLeft"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_vertical|start"
                        android:layout_marginStart="16dp"
                        android:background="@drawable/carousel_arrow_background"
                        android:src="@drawable/ic_arrow_left"
                        android:padding="8dp"
                        android:contentDescription="Previous image"
                        android:clickable="true"
                        android:focusable="true" />

                    <!-- Right Arrow -->
                    <ImageView
                        android:id="@+id/btnCarouselRight"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_vertical|end"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/carousel_arrow_background"
                        android:src="@drawable/ic_arrow_right"
                        android:padding="8dp"
                        android:contentDescription="Next image"
                        android:clickable="true"
                        android:focusable="true" />

                    <LinearLayout
                        android:id="@+id/indicatorContainer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center_horizontal"
                        android:layout_marginBottom="16dp"
                        android:orientation="horizontal" />

                </FrameLayout>

            </LinearLayout>

            <!-- Banner Text Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:paddingHorizontal="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/banner_background"
                    android:padding="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Experience luxury and comfort at LuxeVista — world-class rooms, premium spa services, and unforgettable stays."
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:fontFamily="@font/poppins_medium"
                        android:lineSpacingExtra="4dp"
                        android:textAlignment="center"
                        android:gravity="center" />

                </LinearLayout>

            </LinearLayout>

            <!-- Promotions Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="24dp"
                android:paddingHorizontal="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Special Promotions"
                        android:textColor="#1A1A1A"
                        android:textSize="20sp"
                        android:fontFamily="@font/poppins_bold" />

                    <TextView
                        android:id="@+id/tvSeeAllPromotions"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="See All"
                        android:textColor="@color/light_blue_primary"
                        android:textSize="14sp"
                        android:fontFamily="@font/poppins_medium"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:padding="8dp" />

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerPromotions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:clipToPadding="false"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"
                    tools:listitem="@layout/item_promotion" />

            </LinearLayout>

            <!-- Nearby Attractions Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="32dp"
                android:paddingHorizontal="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Nearby Attractions"
                        android:textColor="#1A1A1A"
                        android:textSize="20sp"
                        android:fontFamily="@font/poppins_bold" />

                    <TextView
                        android:id="@+id/tvSeeAllAttractions"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Explore"
                        android:textColor="@color/light_blue_primary"
                        android:textSize="14sp"
                        android:fontFamily="@font/poppins_medium"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:padding="8dp" />

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerAttractions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:clipToPadding="false"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"
                    tools:listitem="@layout/item_attraction" />

            </LinearLayout>

            <!-- Featured Rooms Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="32dp"
                android:paddingHorizontal="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Featured Rooms"
                        android:textColor="#1A1A1A"
                        android:textSize="20sp"
                        android:fontFamily="@font/poppins_bold" />

                    <TextView
                        android:id="@+id/tvSeeAllRooms"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="View All"
                        android:textColor="@color/light_blue_primary"
                        android:textSize="14sp"
                        android:fontFamily="@font/poppins_medium"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:padding="8dp" />

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerFeaturedRooms"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:clipToPadding="false"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"
                    tools:listitem="@layout/item_featured_room" />

            </LinearLayout>

            <!-- Featured Services Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="32dp"
                android:paddingHorizontal="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Featured Services"
                        android:textColor="#1A1A1A"
                        android:textSize="20sp"
                        android:fontFamily="@font/poppins_bold" />

    <TextView
                        android:id="@+id/tvSeeAllServices"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
                        android:text="View All"
                        android:textColor="@color/light_blue_primary"
                        android:textSize="14sp"
                        android:fontFamily="@font/poppins_medium"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:padding="8dp" />

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerFeaturedServices"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:clipToPadding="false"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"
                    tools:listitem="@layout/item_featured_service" />

            </LinearLayout>

            <!-- Weather Widget Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="32dp"
                android:paddingHorizontal="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Current Weather in Galle"
                    android:textColor="@color/text_primary"
                    android:textSize="20sp"
                    android:fontFamily="@font/poppins_bold"
                    android:layout_marginBottom="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/weather_card_background"
                    android:padding="20dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="28°C"
                            android:textColor="@color/white"
                            android:textSize="36sp"
                            android:fontFamily="@font/poppins_bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Partly Cloudy"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:fontFamily="@font/poppins_medium"
                            android:alpha="0.9" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Perfect beach weather!"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:fontFamily="@font/poppins_regular"
                            android:alpha="0.8"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/ic_welcome_sun"
                        android:alpha="0.9"
                        app:tint="@color/white" />

                </LinearLayout>

            </LinearLayout>

            <!-- Testimonials Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="32dp"
                android:paddingHorizontal="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="What Our Guests Say"
                        android:textColor="@color/text_primary"
                        android:textSize="20sp"
                        android:fontFamily="@font/poppins_bold" />

                    <TextView
                        android:id="@+id/tvSeeAllTestimonials"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="See More"
                        android:textColor="@color/light_blue_primary"
                        android:textSize="14sp"
                        android:fontFamily="@font/poppins_medium"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:padding="8dp" />

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerTestimonials"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                    app:spanCount="2"
                    android:clipToPadding="false"
                    android:paddingBottom="16dp" />

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>



