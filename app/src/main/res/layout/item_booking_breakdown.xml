<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/bg_section_border"
    android:padding="16dp"
    android:layout_marginBottom="12dp"
    android:gravity="center_vertical">

    <!-- Item Image -->
    <ImageView
        android:id="@+id/ivItemImage"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_image_placeholder"
        android:scaleType="centerCrop"
        android:background="@drawable/bg_logo_circle_small"
        android:layout_marginEnd="16dp"
        android:contentDescription="Item image"
        app:tint="@color/dark_blue_primary" />

    <!-- Item Details -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvItemName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Item Name"
            android:textSize="16sp"
            android:textColor="@color/dark_blue_primary"
            android:fontFamily="@font/poppins_bold"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tvItemDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Item Details"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:fontFamily="@font/poppins_regular"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tvItemDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date/Time"
            android:textSize="12sp"
            android:textColor="@color/light_blue_primary"
            android:fontFamily="@font/poppins_medium" />
    </LinearLayout>

    <!-- Price -->
    <TextView
        android:id="@+id/tvItemPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$0.00"
        android:textSize="18sp"
        android:textColor="@color/light_blue_primary"
        android:fontFamily="@font/poppins_bold"
        android:layout_marginStart="16dp" />

</LinearLayout>
