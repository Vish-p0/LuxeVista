<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/light_blue_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Single Image -->
        <ImageView
            android:id="@+id/ivRoomImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_image_placeholder"
            android:background="@drawable/top_rounded_background" />

        <!-- Remove the image indicators section -->

        <!-- Room Name and Type -->
        <TextView
            android:id="@+id/tvRoomName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Room Name"
            android:textColor="@color/dark_blue_primary"
            android:textSize="20sp"
            android:fontFamily="@font/poppins_bold" />

        <TextView
            android:id="@+id/tvRoomType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Deluxe"
            android:textColor="@color/light_blue_primary"
            android:textSize="14sp"
            android:fontFamily="@font/poppins_medium"
            android:background="@drawable/bg_room_type_tag"
            android:paddingHorizontal="12dp"
            android:paddingVertical="4dp" />

        <!-- Description -->
        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Description"
            android:textColor="@color/text_primary"
            android:textSize="14sp"
            android:fontFamily="@font/poppins_regular"
            android:lineSpacingExtra="2dp" />

        <!-- Amenities Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Amenities"
            android:textColor="@color/dark_blue_primary"
            android:textSize="16sp"
            android:fontFamily="@font/poppins_bold" />

        <LinearLayout
            android:id="@+id/layoutAmenities"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="vertical" />

        <!-- Price and Quantity Section -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="16dp"
            android:background="@color/divider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$200/night"
                    android:textColor="@color/light_blue_primary"
                    android:textSize="18sp"
                    android:fontFamily="@font/poppins_bold" />

                <TextView
                    android:id="@+id/tvMaxGuests"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Max 2 guests"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quantity"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp" />

                <Spinner
                    android:id="@+id/spnQuantity"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Apply Button -->
        <Button
            android:id="@+id/btnApply"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="20dp"
            android:text="Add to Booking"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:backgroundTint="@color/dark_blue_primary" />

    </LinearLayout>

</ScrollView>
