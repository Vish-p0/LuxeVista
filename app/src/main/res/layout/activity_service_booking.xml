<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_primary">

    <!-- Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white"
        android:elevation="4dp"
        app:titleTextColor="@color/dark_blue_primary"
        app:navigationIconTint="@color/dark_blue_primary" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Service Images Carousel -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.viewpager2.widget.ViewPager2
                        android:id="@+id/viewPagerImages"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <!-- Page Indicators -->
                    <LinearLayout
                        android:id="@+id/indicatorContainer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center_horizontal"
                        android:layout_marginBottom="16dp"
                        android:orientation="horizontal" />

                </FrameLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Service Information -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                android:backgroundTint="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Service Name -->
                    <TextView
                        android:id="@+id/tvServiceName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Luxury Spa 60min"
                        android:textColor="@color/dark_blue_primary"
                        android:textSize="24sp"
                        android:fontFamily="@font/poppins_bold"
                        android:layout_marginBottom="8dp"
                        tools:text="Luxury Spa 60min" />

                    <!-- Service Category and Price Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:id="@+id/tvServiceCategory"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Spa"
                            android:textColor="@color/light_blue_primary"
                            android:textSize="14sp"
                            android:fontFamily="@font/poppins_medium"
                            android:background="@drawable/bg_service_category_badge"
                            android:paddingHorizontal="12dp"
                            android:paddingVertical="6dp"
                            tools:text="Spa" />

                        <TextView
                            android:id="@+id/tvServicePrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$85"
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            android:fontFamily="@font/poppins_bold"
                            android:background="@drawable/bg_price_badge"
                            android:paddingHorizontal="16dp"
                            android:paddingVertical="8dp"
                            tools:text="$85" />

                    </LinearLayout>

                    <!-- Service Duration -->
                    <TextView
                        android:id="@+id/tvServiceDuration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="60 minutes"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        android:fontFamily="@font/poppins_medium"
                        android:layout_marginBottom="12dp"
                        tools:text="60 minutes" />

                    <!-- Service Description -->
                    <TextView
                        android:id="@+id/tvServiceDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Relaxing full-body massage using essential oils and aromatherapy."
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        android:fontFamily="@font/poppins_regular"
                        android:lineSpacingExtra="2dp"
                        tools:text="Relaxing full-body massage using essential oils and aromatherapy." />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Booking Type Selection -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                android:backgroundTint="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Booking Type"
                        android:textColor="@color/dark_blue_primary"
                        android:textSize="18sp"
                        android:fontFamily="@font/poppins_bold"
                        android:layout_marginBottom="12dp" />

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/chipGroupBookingType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:singleSelection="true">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipStandalone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Standalone Service"
                            android:checkable="true"
                            app:chipBackgroundColor="@color/light_blue_background"
                            android:textColor="@color/dark_blue_primary" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipWithRoom"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="With Room"
                            android:checkable="true"
                            app:chipBackgroundColor="@color/light_blue_background"
                            android:textColor="@color/dark_blue_primary" />

                    </com.google.android.material.chip.ChipGroup>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Date and Time Selection -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardDateTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                android:backgroundTint="@color/white"
                android:foreground="?attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Select Date &amp; Time"
                        android:textColor="@color/dark_blue_primary"
                        android:textSize="18sp"
                        android:fontFamily="@font/poppins_bold"
                        android:layout_marginBottom="12dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSelectDateTime"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="Choose Date &amp; Time"
                        android:textColor="@color/white"
                        android:backgroundTint="@color/light_blue_primary"
                        android:fontFamily="@font/poppins_medium" />

                    <TextView
                        android:id="@+id/tvSelectedDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Select Date"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        android:fontFamily="@font/poppins_regular"
                        android:layout_marginTop="8dp"
                        android:gravity="center" />

                    <TextView
                        android:id="@+id/tvSelectedTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:text="Select Time"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        android:fontFamily="@font/poppins_regular"
                        android:layout_marginTop="4dp"
                        android:gravity="center" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Time Slots Selection -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                android:backgroundTint="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tvTimeSlotsTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Available Time Slots"
                        android:textColor="@color/dark_blue_primary"
                        android:textSize="18sp"
                        android:fontFamily="@font/poppins_bold"
                        android:layout_marginBottom="12dp" />

                    <LinearLayout
                        android:id="@+id/timeSlotsContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Room Selection (Only shown for "With Room" booking type) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/roomSelectionContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:visibility="gone"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                android:backgroundTint="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tvRoomSelectionTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Select Room"
                        android:textColor="@color/dark_blue_primary"
                        android:textSize="18sp"
                        android:fontFamily="@font/poppins_bold"
                        android:layout_marginBottom="12dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSelectRoom"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="Choose Room"
                        android:textColor="@color/white"
                        android:backgroundTint="@color/light_blue_primary"
                        android:fontFamily="@font/poppins_medium" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Booking Summary -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/bookingSummaryLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:visibility="gone"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                android:backgroundTint="@color/light_blue_background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Booking Summary"
                        android:textColor="@color/dark_blue_primary"
                        android:textSize="18sp"
                        android:fontFamily="@font/poppins_bold"
                        android:layout_marginBottom="12dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Service:"
                            android:textColor="@color/text_secondary"
                            android:textSize="14sp"
                            android:fontFamily="@font/poppins_medium" />

                        <TextView
                            android:id="@+id/tvSummaryService"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Luxury Spa"
                            android:textColor="@color/dark_blue_primary"
                            android:textSize="14sp"
                            android:fontFamily="@font/poppins_medium"
                            tools:text="Luxury Spa" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Duration:"
                            android:textColor="@color/text_secondary"
                            android:textSize="14sp"
                            android:fontFamily="@font/poppins_medium" />

                        <TextView
                            android:id="@+id/tvSummaryDuration"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="60 minutes"
                            android:textColor="@color/dark_blue_primary"
                            android:textSize="14sp"
                            android:fontFamily="@font/poppins_medium"
                            tools:text="60 minutes" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Price:"
                            android:textColor="@color/text_secondary"
                            android:textSize="14sp"
                            android:fontFamily="@font/poppins_medium" />

                        <TextView
                            android:id="@+id/tvSummaryPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$85"
                            android:textColor="@color/dark_blue_primary"
                            android:textSize="14sp"
                            android:fontFamily="@font/poppins_medium"
                            tools:text="$85" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/light_blue_secondary"
                        android:layout_marginBottom="16dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Total:"
                            android:textColor="@color/dark_blue_primary"
                            android:textSize="18sp"
                            android:fontFamily="@font/poppins_bold" />

                        <TextView
                            android:id="@+id/tvSummaryTotal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$85"
                            android:textColor="@color/dark_blue_primary"
                            android:textSize="18sp"
                            android:fontFamily="@font/poppins_bold"
                            tools:text="$85" />

                    </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnConfirmBooking"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="Confirm Booking"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:fontFamily="@font/poppins_bold"
                        android:backgroundTint="@color/dark_blue_primary"
                        android:elevation="4dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </ScrollView>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:menu="@menu/bottom_nav_menu" />

</LinearLayout>
