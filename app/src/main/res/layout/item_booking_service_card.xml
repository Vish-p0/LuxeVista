<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/light_blue_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Single Image -->
        <ImageView
            android:id="@+id/ivServiceImage"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_image_placeholder"
            android:background="@drawable/top_rounded_background" />

        <!-- Service Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:id="@+id/tvServiceName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Service Name"
                android:textColor="@color/dark_blue_primary"
                android:textSize="14sp"
                android:fontFamily="@font/poppins_bold"
                android:maxLines="2"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/tvPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="$85.00"
                android:textColor="@color/light_blue_primary"
                android:textSize="16sp"
                android:fontFamily="@font/poppins_bold" />

            <!-- Category badge -->
            <TextView
                android:id="@+id/tvCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Spa"
                android:textColor="@color/dark_blue_primary"
                android:textSize="12sp"
                android:fontFamily="@font/poppins_medium"
                android:background="@drawable/bg_room_type_tag"
                android:paddingHorizontal="8dp"
                android:paddingVertical="2dp" />

            <!-- Short description -->
            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Service description"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                android:fontFamily="@font/poppins_regular"
                android:maxLines="2"
                android:ellipsize="end" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvDuration"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="60 min"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"
                    android:fontFamily="@font/poppins_regular" />

                <TextView
                    android:id="@+id/tvAvailable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5 slots"
                    android:textColor="@color/light_blue_primary"
                    android:textSize="12sp"
                    android:fontFamily="@font/poppins_medium"
                    android:background="@drawable/bg_availability_badge"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvAddedQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Added: 0"
                android:textColor="@color/dark_blue_primary"
                android:textSize="12sp"
                android:fontFamily="@font/poppins_medium"
                android:background="@drawable/bg_quantity_badge"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:visibility="gone" />

        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
