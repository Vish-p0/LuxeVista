<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:strokeWidth="0dp"
    android:backgroundTint="#FFFFFF"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Room Image -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <ImageView
                android:id="@+id/ivRoomImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_image_placeholder"
                tools:src="@tools:sample/backgrounds/scenic" />

            <!-- Price Badge -->
            <TextView
                android:id="@+id/tvRoomPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|end"
                android:layout_margin="12dp"
                android:text="$100/night"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:fontFamily="@font/poppins_bold"
                android:background="@drawable/bg_price_badge"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                tools:text="$100/night" />

            <!-- Room Type Badge -->
            <TextView
                android:id="@+id/tvRoomType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|start"
                android:layout_margin="12dp"
                android:text="Standard"
                android:textColor="#1A1A1A"
                android:textSize="12sp"
                android:fontFamily="@font/poppins_bold"
                android:background="@drawable/bg_room_type_badge"
                android:paddingHorizontal="10dp"
                android:paddingVertical="4dp"
                tools:text="Standard" />

        </FrameLayout>

        <!-- Room Details -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Room Name and Guests -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/tvRoomName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Standard Twin Room"
                    android:textColor="#1A1A1A"
                    android:textSize="18sp"
                    android:fontFamily="@font/poppins_bold"
                    android:maxLines="2"
                    android:ellipsize="end"
                    tools:text="Standard Twin Room" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/bg_guests_tag"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_person"
                        android:layout_marginEnd="4dp"
                        app:tint="#007AFF" />

                    <TextView
                        android:id="@+id/tvMaxGuests"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2"
                        android:textColor="#007AFF"
                        android:textSize="12sp"
                        android:fontFamily="@font/poppins_medium"
                        tools:text="2" />

                </LinearLayout>

            </LinearLayout>

            <!-- Room Description -->
            <TextView
                android:id="@+id/tvRoomDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Comfortable twin-bed room for budget-conscious travelers."
                android:textColor="#666666"
                android:textSize="14sp"
                android:fontFamily="@font/poppins_regular"
                android:layout_marginBottom="12dp"
                android:maxLines="2"
                android:ellipsize="end"
                tools:text="Comfortable twin-bed room for budget-conscious travelers with modern amenities." />

            <!-- Amenities Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Amenities"
                    android:textColor="#1A1A1A"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins_medium"
                    android:layout_marginBottom="8dp" />

                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none">

                    <LinearLayout
                        android:id="@+id/layoutAmenities"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!-- WiFi -->
                        <ImageView
                            android:id="@+id/amenityWifi"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/amenities_wifi"
                            android:layout_marginEnd="8dp"
                            android:padding="2dp"
                            android:background="@drawable/bg_amenity_icon"
                            android:visibility="gone"
                            app:tint="#007AFF"
                            tools:visibility="visible" />

                        <!-- Air Conditioning -->
                        <ImageView
                            android:id="@+id/amenityAirConditioning"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/amenities_air_conditioning"
                            android:layout_marginEnd="8dp"
                            android:padding="2dp"
                            android:background="@drawable/bg_amenity_icon"
                            android:visibility="gone"
                            app:tint="#007AFF"
                            tools:visibility="visible" />

                        <!-- Television -->
                        <ImageView
                            android:id="@+id/amenityTelevision"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/amenities_television"
                            android:layout_marginEnd="8dp"
                            android:padding="2dp"
                            android:background="@drawable/bg_amenity_icon"
                            android:visibility="gone"
                            app:tint="#007AFF"
                            tools:visibility="visible" />

                        <!-- Room Service -->
                        <ImageView
                            android:id="@+id/amenityRoomService"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/amenities_room_service"
                            android:layout_marginEnd="8dp"
                            android:padding="2dp"
                            android:background="@drawable/bg_amenity_icon"
                            android:visibility="gone"
                            app:tint="#007AFF"
                            tools:visibility="visible" />

                        <!-- Non Smoking -->
                        <ImageView
                            android:id="@+id/amenityNonSmoking"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/amenities_non_smoking"
                            android:layout_marginEnd="8dp"
                            android:padding="2dp"
                            android:background="@drawable/bg_amenity_icon"
                            android:visibility="gone"
                            app:tint="#007AFF"
                            tools:visibility="visible" />

                        <!-- Wheelchair Accessible -->
                        <ImageView
                            android:id="@+id/amenityWheelchairAccessible"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/amenities_wheelchair_accessible"
                            android:layout_marginEnd="8dp"
                            android:padding="2dp"
                            android:background="@drawable/bg_amenity_icon"
                            android:visibility="gone"
                            app:tint="#007AFF"
                            tools:visibility="visible" />

                        <!-- Balcony -->
                        <ImageView
                            android:id="@+id/amenityBalcony"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/amenities_balcony"
                            android:layout_marginEnd="8dp"
                            android:padding="2dp"
                            android:background="@drawable/bg_amenity_icon"
                            android:visibility="gone"
                            app:tint="#007AFF"
                            tools:visibility="visible" />

                        <!-- Ocean View -->
                        <ImageView
                            android:id="@+id/amenityOceanView"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/amenities_ocean_view"
                            android:layout_marginEnd="8dp"
                            android:padding="2dp"
                            android:background="@drawable/bg_amenity_icon"
                            android:visibility="gone"
                            app:tint="#007AFF"
                            tools:visibility="visible" />

                        <!-- King Bed -->
                        <ImageView
                            android:id="@+id/amenityKingBed"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/amenities_king_bed"
                            android:layout_marginEnd="8dp"
                            android:padding="2dp"
                            android:background="@drawable/bg_amenity_icon"
                            android:visibility="gone"
                            app:tint="#007AFF"
                            tools:visibility="visible" />

                        <!-- Coffee Maker -->
                        <ImageView
                            android:id="@+id/amenityCoffeeMaker"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/amenities_coffee_maker"
                            android:layout_marginEnd="8dp"
                            android:padding="2dp"
                            android:background="@drawable/bg_amenity_icon"
                            android:visibility="gone"
                            app:tint="#007AFF"
                            tools:visibility="visible" />

                        <!-- Mini Bar -->
                        <ImageView
                            android:id="@+id/amenityMiniBar"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/amenities_mini_bar"
                            android:layout_marginEnd="8dp"
                            android:padding="2dp"
                            android:background="@drawable/bg_amenity_icon"
                            android:visibility="gone"
                            app:tint="#007AFF"
                            tools:visibility="visible" />

                        <!-- Safe -->
                        <ImageView
                            android:id="@+id/amenitySafe"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/amenities_safe"
                            android:layout_marginEnd="8dp"
                            android:padding="2dp"
                            android:background="@drawable/bg_amenity_icon"
                            android:visibility="gone"
                            app:tint="#007AFF"
                            tools:visibility="visible" />

                        <!-- Jacuzzi -->
                        <ImageView
                            android:id="@+id/amenityJacuzzi"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/amenities_jacuzzi"
                            android:layout_marginEnd="8dp"
                            android:padding="2dp"
                            android:background="@drawable/bg_amenity_icon"
                            android:visibility="gone"
                            app:tint="#007AFF"
                            tools:visibility="visible" />

                        <!-- More indicator -->
                        <TextView
                            android:id="@+id/tvMoreAmenities"
                            android:layout_width="wrap_content"
                            android:layout_height="24dp"
                            android:text="+3"
                            android:textColor="#007AFF"
                            android:textSize="12sp"
                            android:fontFamily="@font/poppins_medium"
                            android:gravity="center"
                            android:background="@drawable/bg_amenity_more"
                            android:paddingHorizontal="6dp"
                            android:visibility="gone"
                            tools:visibility="visible"
                            tools:text="+2" />

                    </LinearLayout>

                </androidx.core.widget.NestedScrollView>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
