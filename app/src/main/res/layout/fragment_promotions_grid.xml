<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFFFFF"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:titleTextColor="#1A1A1A" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:background="@color/light_blue_background"
        app:startIconDrawable="@drawable/ic_search"
        app:startIconTint="@color/dark_blue_primary"
        app:hintTextColor="@color/dark_blue_primary"
        app:boxBackgroundColor="@color/light_blue_background"
        app:boxStrokeColor="@color/dark_blue_primary">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Search promotions"
            android:textColor="@color/dark_blue_primary"
            android:textColorHint="@color/dark_blue_primary"
            android:singleLine="true" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chipGroupCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:layout_marginBottom="8dp"
        app:singleSelection="true">

        <com.google.android.material.chip.Chip
            android:id="@+id/chipAll"
            style="@style/PromotionsFilterChipStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="All"
            android:checkable="true"
            android:checked="true" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipRooms"
            style="@style/PromotionsFilterChipStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rooms"
            android:checkable="true" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipServices"
            style="@style/PromotionsFilterChipStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Services"
            android:checkable="true" />
    </com.google.android.material.chip.ChipGroup>

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chipGroupDiscount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:layout_marginBottom="8dp"
        app:singleSelection="true">

        <com.google.android.material.chip.Chip
            android:id="@+id/chipAnyDiscount"
            style="@style/PromotionsFilterChipStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Any discount"
            android:checkable="true"
            android:checked="true" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipDis10"
            style="@style/PromotionsFilterChipStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=">= 10%"
            android:checkable="true" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipDis20"
            style="@style/PromotionsFilterChipStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=">= 20%"
            android:checkable="true" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipDis30"
            style="@style/PromotionsFilterChipStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=">= 30%"
            android:checkable="true" />
    </com.google.android.material.chip.ChipGroup>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerPromotionsGrid"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp"
        android:clipToPadding="false" />

</LinearLayout>


